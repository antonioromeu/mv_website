---
import TrailerCard from '../trailer_card.astro';
import fdb_jpg from '../../assets/images/fdb.jpg';
import fdb_svg_en from '../../assets/vectors/en/fdb.svg?raw';
import fdb_svg_pt from '../../assets/vectors/pt/fdb.svg?raw';
import { fdbContent } from '../../content/fdb';

interface Props {
    lang: 'en' | 'pt';
}

const { lang } = Astro.props;
const t = fdbContent[lang];
const currentSvg = lang === 'pt' ? fdb_svg_pt : fdb_svg_en;
---

<section 
    id="fora-da-bouca"
    data-color="var(--color-pink)"
    class="snap-section shrink-0
           md:flex-row"
    style={`padding-top: var(--nav-height);`}
>
    <!-- SVG section -->
    <div class="w-full pr-[10vw] pl-[3.5vw] flex items-start [&>svg]:w-full [&>svg]:h-auto
                md:w-[50vw] md:px-0 pt-[6vh] md:pt-0 md:pb-[2vw] md:pl-[3.5vw] md:pr-[3.5vw] md:items-end">
        <Fragment set:html={currentSvg} />
    </div>

    <!-- Still section -->
    <div class="w-full pr-[3.5vw] pl-[10vw] flex justify-end items-start pt-[2.5vh] shrink-0
                md:w-[50vw] md:pr-[3.5vw] md:pl-[2.5vw] md:justify-center md:pt-0">
        <div class="relative w-fit">
            <TrailerCard 
                vimeoId="947903397"
                imageSrc={fdb_jpg}
                alt={t.altText}
                color="var(--color-pink)"
                type={t.type as "trailer" | "film"}
            />
            <span class="absolute bottom-0 right-0 translate-y-full text-[9px] tracking-widest
                         md:text-xs">{t.yearLocation}</span>
        </div>
    </div>
</section>