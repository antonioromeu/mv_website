---
import about_mp4 from '../../assets/videos/about.mp4';
import { aboutContent } from '../../content/about';

interface Props {
    lang: 'en' | 'pt';
}

const { lang } = Astro.props;
const t = aboutContent[lang];
---

<section 
    id="about-me" 
    data-color="var(--color-blue)" 
    class="snap-section shrink-0
           md:flex-row md:items-center"
    style={`padding-top: var(--nav-height);`}
>
    <!-- Mobile view -->
    <div class="flex flex-col w-full h-full overflow-hidden md:hidden">
        <!-- About Me section -->
        <div class="w-full pt-[3vh] flex justify-start">
            <div class="w-full px-[3.5vw]">
                <span class="block font-bold text-xs">{t.title}</span>
                <div class="text-[10px] leading-relaxed space-y-[1.5vh]">
                    {t.bio.map((para) => (
                        <p set:html={para} />
                    ))}
                </div>
            </div>
        </div>
        
        <!-- Reach Out & video loop section -->
        <div class="w-full flex-1 flex flex-col overflow-hidden">
            <!-- Reach Out section -->
            <div class="w-full pt-[2vh] pl-[3.5vw] flex-none">
                <span class="block font-bold text-xs">{t.reachOut}</span>
                <p class="text-[10px] leading-relaxed">
                    <a href="mailto:mariojcveloso@gmail.com">mariojcveloso@gmail.com</a>
                    <br>
                    <a href="https://www.instagram.com/its.a.me_mariov/" target="_blank" rel="noopener noreferrer">Instagram</a>
                </p>
            </div>
            
            <!-- Video loop section -->
            <div class="flex-1 flex justify-end items-end min-h-0 w-full overflow-hidden">
                <video autoplay muted loop playsinline class="h-full w-full object-bottom-right object-contain block">
                    <source src={about_mp4} type="video/mp4">
                </video>
            </div>
        </div>
    </div>

    <!-- Desktop view -->
    <div class="hidden flex-row w-full h-full md:flex">
        <!-- About Me section -->
        <div class="w-[50vw] pt-[7.5vh] pl-[3.5vw] pr-[3.5vw]">
            <span class="block font-bold text-lg">{t.title}</span>
            <div class="text-xs leading-relaxed space-y-3">
                {t.bio.map((para) => (
                    <p set:html={para} />
                ))}
            </div>
            <span class="block font-bold text-lg pt-[6vh]">{t.reachOut}</span>
            <p class="text-xs leading-relaxed">
                <a href="mailto:mariojcveloso@gmail.com">mariojcveloso@gmail.com</a>
                <br>
                <a href="https://www.instagram.com/its.a.me_mariov/" target="_blank" rel="noopener noreferrer">Instagram</a>
            </p>
        </div>
        
        <!-- Image section -->
        <div class="w-[50vw] flex justify-end items-end overflow-hidden">
            <video autoplay muted loop playsinline class="w-full h-auto object-contain block">
                <source src={about_mp4} type="video/mp4">
            </video>
        </div>
    </div>
</section>