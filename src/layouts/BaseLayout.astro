---
// src/layouts/BaseLayout.astro
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} | Portfolio</title>
	</head>
	<body class="bg-zinc-950 text-white font-sans">
		<nav class="p-6 border-b border-zinc-800 flex justify-between">
			<a href="/" class="font-bold">YOUR NAME</a>
			<div class="space-x-4">
				<a href="/projects" class="hover:text-zinc-400">Work</a>
				<a href="/about" class="hover:text-zinc-400">About</a>
			</div>
		</nav>

		<slot /> <footer class="p-10 text-center text-zinc-500 text-sm">
			&copy; 2026 Portfolio built with Astro
		</footer>
	</body>
</html>